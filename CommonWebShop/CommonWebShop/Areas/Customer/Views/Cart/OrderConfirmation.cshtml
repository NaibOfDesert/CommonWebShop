@model int 

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-light bg-opacity-50 bg-gradient ml-0 py-3 rounded-top">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Order Placed Successfully Information</h2>
            </div>
        </div>
    </div>
    <div class="card-body bg-black bg-opacity-50 p-4 rounded-bottom">
        <div class="py-3">
            <div class="row">
                Your Order number is: @Model
            </div>
            <div class="row" style="color:maroon">
                Your order has been placed successfully!
            </div>
        </div>

    </div>
</div>