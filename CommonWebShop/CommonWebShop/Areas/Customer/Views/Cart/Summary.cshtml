@model ShoppingCartViewModel

<form method="post">
	<div class="card shadow border-0 mt-4">
		<div class="card-header bg-light bg-opacity-50 bg-gradient ml-0 py-3 rounded-top">
			<div class="row">
				<div class="col-12 text-center">
					<h2 class="text-white py-2">Order Summary</h2>
				</div>
			</div>
		</div>


		<div class="card-body bg-black bg-opacity-50 p-4 ">
			<div class="container rounded p-2">
				<div class="row pb-4">
					<div class="col-12 col-lg-6 pb-4">
						<div class="row">
							<h4 class="d-flex justify-content-between align-items-center mb-3">
								<span class="text-white">Shipping Details:</span>
							</h4>
						</div>
						<div class="row my-1">
							<div class="col-3">
								<label>Name</label>
							</div>
							<div class="col-9">
								<input asp-for="OrderHeader.Name" class="form-control" />
								<span asp-validation-for="OrderHeader.Name" class="text-danger"></span>
							</div>
						</div>
						<div class="row my-1">
							<div class="col-3">
								<label>Phone</label>
							</div>
							<div class="col-9">
								<input asp-for="OrderHeader.PhoneNumber" class="form-control" />
								<span asp-validation-for="OrderHeader.PhoneNumber" class="text-danger"></span>
							</div>
						</div>
						<div class="row my-1">
							<div class="col-3">
								<label>Street Address</label>
							</div>
							<div class="col-9">
								<input asp-for="OrderHeader.StreetAdress" class="form-control" />
								<span asp-validation-for="OrderHeader.StreetAdress" class="text-danger"></span>
							</div>
						</div>
						<div class="row my-1">
							<div class="col-3">
								<label>City</label>
							</div>
							<div class="col-9">
								<input asp-for="OrderHeader.City" class="form-control" />
								<span asp-validation-for="OrderHeader.City" class="text-danger"></span>
							</div>
						</div>
						<div class="row my-1">
							<div class="col-3">
								<label>State</label>
							</div>
							<div class="col-9">
								<input asp-for="OrderHeader.State" class="form-control" />
								<span asp-validation-for="OrderHeader.State" class="text-danger"></span>
							</div>
						</div>
						<div class="row my-1">
							<div class="col-3">
								<label>Postal Code</label>
							</div>
							<div class="col-9">
								<input asp-for="OrderHeader.PostalCode" class="form-control" />
								<span asp-validation-for="OrderHeader.PostalCode" class="text-danger"></span>
							</div>
						</div>
					</div>
					<div class="col-12 col-lg-5 offset-lg-1">
						<h4 class="d-flex justify-content-between align-items-center mb-3">
							<span class="text-white">Order Summary:</span>
						</h4>
						<ul class="list-group mb-3">
							@foreach(var c in Model.ShoppingCartList)
							{
								<li class="list-group-item d-flex justify-content-between">
									<div>
										<h6 class="my-0">@c.Product.Title</h6>
										<small class="text-success">Quantity: @c.Count</small>
									</div>
									<span class="text-white">@((c.Price * @c.Count).ToString("c")) </span>
								</li>
							}
							<li class="list-group-item d-flex justify-content-between bg-light">
								<small class="text-white">Total: </small>
								<strong class="text-white">@Model.OrderHeader.OrderTotal.ToString("c")</strong>
							</li>
						</ul>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-12 col-md-7 pt-2">
				</div>
				<div class="col-12 col-md-5">
					<a asp-area="Customer" asp-controller="Cart" asp-action="Index" class="btn btn-outline-primary text-uppercase form-control"><small>Continue Shopping</small></a>
				</div>
			</div>
		</div>
		<div class="card-footer bg-black bg-opacity-50 p-4 rounded-bottom">
			<div class="row">
				<div class="col-12 col-md-7 pt-2">
					<p style="color:maroon; font-size:14px;">
						Estimate Arrival Date: @DateTime.Now.AddDays(7).ToShortDateString() - @DateTime.Now.AddDays(14).ToShortDateString()
					</p>
				</div>
				<div class="col-12 col-md-5">
					<button type="submit" value="Place Order" class="btn btn-secondary form-control text-uppercase">Place Order</button>
				</div>
			</div>
		</div>
	</div>
</form>